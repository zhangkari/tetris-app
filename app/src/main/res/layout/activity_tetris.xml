<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <game.tetris.view.DancerView
            android:id="@+id/spriteView"
            android:layout_width="240dp"
            android:layout_height="360dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <game.tetris.view.ForecasterView
                android:id="@+id/forecaster"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="0" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/reset"
            style="@style/btn_setting"
            android:text="Reset" />

        <TextView
            android:id="@+id/music"
            style="@style/btn_setting"
            android:text="Music" />

        <TextView
            android:id="@+id/level"
            style="@style/btn_setting"
            android:text="Level" />

        <TextView
            android:id="@+id/pause"
            style="@style/btn_setting"
            android:text="Pause" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/left"
            style="@style/btn_direction.left"
            android:src="@drawable/ic_left" />

        <ImageView
            android:id="@+id/right"
            style="@style/btn_direction.right"
            android:src="@drawable/ic_right" />

        <ImageView
            android:id="@+id/transform"
            style="@style/btn_transform"
            android:src="@drawable/ic_change" />

    </LinearLayout>

    <ImageView
        android:id="@+id/down"
        style="@style/btn_direction.bottom"
        android:src="@drawable/ic_down" />
</LinearLayout>