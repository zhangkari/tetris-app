<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.minmin.kari.tetris">

    <application
        android:name="game.tetris.App"
        android:icon="@drawable/logo_72x72"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/ADMOB_APP_ID" />

        <activity
            android:name="game.tetris.HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:name="game.tetris.TetrisActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="game.tetris.PuzzleActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>